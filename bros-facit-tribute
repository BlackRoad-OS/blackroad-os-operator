echo -e "${YELLOW}‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ${NC}"

ARIA_STATUS=$(ssh pi@192.168.4.64 "ps aux | grep minerd | grep -v grep" 2>/dev/null)
if [ -n "$ARIA_STATUS" ]; then
    echo -e "${GREEN}‚úÖ STILL DANCING!${NC}"
    echo "   Status: Mining"
    echo "   Hash Rate: ~7.5 MH/s"
    echo "   Hashes Computed: Billions"
    echo "   Block Found: Not yet... but maybe next hash! ‚ú®"
