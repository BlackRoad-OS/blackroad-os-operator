the_headline() {
    show_victory_banner
    
    echo -e "${GREEN}${BOLD}ðŸ“° HEADLINES FROM THE FUTURE ðŸ“°${NC}"
    echo ""
    
    local headlines=(
        "Philosophy Student's \$50 Raspberry Pi Defeats \$10M Mining Operation"
        "'We Weren't Racing, We Were Dancing' Says Bitcoin Winner"
        "Solo Miner Proves Probability Doesn't Care About Your Hash Rate"
        "The Cosmic Lottery: When Wonder Beats Optimization"
        "Aria Pi: The Little Raspberry Pi That Could (And Did)"
        "'BlackRoad-Aria-âˆž' Forever Etched in Bitcoin's Blockchain"
        "16 Trillion Times Slower, But Still Fast Enough to Win"
        "The Space Between: A \$306,250 Lesson in Not Giving Up"
    )
    
    for headline in "${headlines[@]}"; do
        echo -e "${YELLOW}â€¢ ${headline}${NC}"
        echo ""
        sleep 1
    done
    
    echo -e "${MAGENTA}${BOLD}Every single one of these could be real.${NC}"
    echo -e "${MAGENTA}${BOLD}The next block could be yours. âœ¨${NC}"
}

probability_doesnt_care() {
    show_victory_banner
    
    echo -e "${GREEN}${BOLD}ðŸŽ² WHY THIS COULD ACTUALLY HAPPEN ðŸŽ²${NC}"
    echo ""
    
    echo -e "${CYAN}Mathematical Truth #1:${NC}"
    echo "   Each hash attempt is INDEPENDENT"
    echo "   Your 847 billionth hash has the SAME chance as hash #1"
    echo "   Probability is memoryless"
    echo ""
    
    echo -e "${CYAN}Mathematical Truth #2:${NC}"
    echo "   You have 7.5 million attempts per second"
    echo "   Each one could be THE ONE"
    echo "   Probability > 0 = POSSIBLE"
    echo ""
    
    echo -e "${CYAN}Historical Truth:${NC}"
    echo "   2022: GPU miner won (100 MH/s)"
    echo "   2023: Single ASIC won (14 TH/s)"
    echo "   2025: Aria Pi? (7.5 MH/s) WHY NOT?"
    echo ""
    
    echo -e "${YELLOW}${BOLD}The universe doesn't check your hash rate before deciding.${NC}"
    echo -e "${YELLOW}${BOLD}It only checks: Did this hash win?${NC}"
    echo ""
    
    echo -e "${MAGENTA}And one day, maybe today, maybe tomorrow...${NC}"
    echo -e "${MAGENTA}The answer could be: ${GREEN}${BOLD}YES. âœ¨${NC}"
}

case "${1:-timeline}" in
    timeline)
        timeline
        ;;
    what-if)
        what_would_you_do
        ;;
    headlines)
        the_headline
        ;;
    truth)
        probability_doesnt_care
        ;;
    all)
        timeline
        sleep 2
        what_would_you_do
        sleep 2
        the_headline
        sleep 2
        probability_doesnt_care
        ;;
    *)
        echo "Victory Scenario Generator"
        echo ""
        echo "Commands:"
        echo "  timeline     - What happens if we win (default)"
        echo "  what-if      - What would you do with \$306,250?"
        echo "  headlines    - Headlines from the future"
        echo "  truth        - Why this could actually happen"
        echo "  all          - Show everything"
        ;;
esac
