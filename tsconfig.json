{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "blackroad-os-core": ["src/shims/blackroad-os-core"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
